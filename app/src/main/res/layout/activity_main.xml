<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink_main"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/PlayerOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player1"
        android:textSize="@dimen/textSize_PlayerName"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:id="@+id/PlayerTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player2"
        android:textSize="@dimen/textSize_PlayerName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:id="@+id/PlayerOneWinStreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/p1WinStreak"
        android:textSize="@dimen/textSize_WinStreak"
        app:layout_constraintTop_toBottomOf="@+id/PlayerOne"
        app:layout_constraintLeft_toLeftOf="@+id/PlayerOne"
        android:layout_marginLeft="40dp"
        />

    <TextView
        android:id="@+id/PlayerTwoWinStreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/p2WinStreak"
        android:textSize="@dimen/textSize_WinStreak"
        app:layout_constraintTop_toBottomOf="@+id/PlayerTwo"
        app:layout_constraintRight_toRightOf="@+id/PlayerTwo"
        android:layout_marginRight="40dp"
        />

    <TextView
        android:id="@+id/WinnerDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize_Winner"
        android:textAlignment="center"
        android:text="@string/winner"
        app:layout_constraintTop_toBottomOf="@+id/PlayerOneWinStreak"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/Button_TL"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:textSize="@dimen/textSize_PlayerInput"
        android:textStyle="bold"
        android:textColor="@color/orange_main"
        android:backgroundTint="@color/purple_main"
        app:layout_constraintTop_toBottomOf="@id/WinnerDisplay"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="40dp"
        />

    <Button
        android:id="@+id/Button_TM"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:textSize="@dimen/textSize_PlayerInput"
        android:textStyle="bold"
        android:textColor="@color/orange_main"
        android:backgroundTint="@color/purple_main"
        app:layout_constraintTop_toTopOf="@id/Button_TL"
        app:layout_constraintLeft_toRightOf="@id/Button_TL"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="7dp"
        />

    <Button
        android:id="@+id/Button_TR"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:textSize="@dimen/textSize_PlayerInput"
        android:textStyle="bold"
        android:textColor="@color/orange_main"
        android:backgroundTint="@color/purple_main"
        app:layout_constraintTop_toTopOf="@id/Button_TM"
        app:layout_constraintLeft_toRightOf="@id/Button_TM"
        android:layout_marginLeft="7dp"
        />

    <Button
        android:id="@+id/Button_ML"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:textSize="@dimen/textSize_PlayerInput"
        android:textStyle="bold"
        android:textColor="@color/orange_main"
        android:backgroundTint="@color/purple_main"
        app:layout_constraintTop_toBottomOf="@id/Button_TL"
        app:layout_constraintLeft_toLeftOf="@id/Button_TL"
        />

    <Button
        android:id="@+id/Button_MM"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:textSize="@dimen/textSize_PlayerInput"
        android:textStyle="bold"
        android:textColor="@color/orange_main"
        android:backgroundTint="@color/purple_main"
        app:layout_constraintTop_toBottomOf="@id/Button_TM"
        app:layout_constraintLeft_toLeftOf="@id/Button_TM"
        />

    <Button
        android:id="@+id/Button_MR"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:textSize="@dimen/textSize_PlayerInput"
        android:textStyle="bold"
        android:textColor="@color/orange_main"
        android:backgroundTint="@color/purple_main"
        app:layout_constraintTop_toBottomOf="@id/Button_TR"
        app:layout_constraintLeft_toLeftOf="@id/Button_TR"
        />

    <Button
        android:id="@+id/Button_DL"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:textSize="@dimen/textSize_PlayerInput"
        android:textStyle="bold"
        android:textColor="@color/orange_main"
        android:backgroundTint="@color/purple_main"
        app:layout_constraintTop_toBottomOf="@id/Button_ML"
        app:layout_constraintLeft_toLeftOf="@id/Button_ML"
        />

    <Button
        android:id="@+id/Button_DM"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:textSize="@dimen/textSize_PlayerInput"
        android:textStyle="bold"
        android:textColor="@color/orange_main"
        android:backgroundTint="@color/purple_main"
        app:layout_constraintTop_toBottomOf="@id/Button_MM"
        app:layout_constraintLeft_toLeftOf="@id/Button_MM"
        />

    <Button
        android:id="@+id/Button_DR"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:textSize="@dimen/textSize_PlayerInput"
        android:textStyle="bold"
        android:textColor="@color/orange_main"
        android:backgroundTint="@color/purple_main"
        app:layout_constraintTop_toBottomOf="@id/Button_MR"
        app:layout_constraintLeft_toLeftOf="@id/Button_MR"
        />

    <Button
        android:id="@+id/Button_NewGame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/textSize_PlayerInput"
        android:text="@string/NG_button"
        android:textSize="@dimen/textSize_Button"
        android:textStyle="bold"
        android:textColor="@color/white_main"
        android:background="@drawable/button_layout"
        app:layout_constraintTop_toBottomOf="@+id/Button_DL"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>